<header class="site-header">
  <nav class="tab-bar hide-for-medium-up">
    <section class="left-small">
      <%= link_to content_tag(:span), nil, class: "left-off-canvas-toggle menu-icon" %>
    </section>
    <section class="middle tab-bar-section">
      <%= image_tag "banner_logo_dark.svg", alt: "SummitCrest", class: "site-icon" %>
    </section>
  </nav>

  <aside class="left-off-canvas-menu">
    <ul class="off-canvas-list">
      <li>
        <%= link_to root_path do %>
          <%= content_tag :span, nil, class: "fa fa-fw fa-home" %>
          Home
        <% end %>
      </li>
      <li>
        <%= link_to support_path do %>
          <%= content_tag :span, nil, class: "fa fa-fw fa-life-ring" %>
          Support
        <% end %>
      </li>
      <li>
        <%= link_to about_path do %>
          <%= content_tag :span, nil, class: "fa fa-fw fa-info-circle" %>
          About Us
        <% end %>
      </li>
      <li>
        <%= link_to contact_path do %>
          <%= content_tag :span, nil, class: "fa fa-fw fa-comment" %>
          Contact Us
        <% end %>
      </li>
    </ul>
  </aside>

  <div class="contain-to-grid">
    <nav class="top-bar show-for-medium-up">
      <ul class="title-area">
        <li class="name">
          <%= image_tag "banner_logo_light.svg", alt: "SummitCrest", class: "site-icon" %>
        </li>
        <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
      </ul>
      <section class="top-bar-section">
        <ul class="right">
          <li class="<%= :active if params[:action] == "home" %>">
            <%= link_to "Home", root_path %>
          </li>
          <li class="<%= :active if params[:action] == "support" %>">
            <%= link_to "Support", support_path %>
          </li>
          <li class="<%= :active if params[:action] == "about" %>">
            <%= link_to "About", about_path %>
          </li>
          <li class="<%= :active if params[:action] == "contact" %>">
            <%= link_to "Contact", contact_path %>
          </li>
        </ul>
      </section>
    </nav>
  </div>
</header>
